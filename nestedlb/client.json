{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "SharedVmConfig": {
      "type": "object"
    },
    "vmName": {
      "type": "string"
    },
    "nicName": {
      "type": "string"
    },
    "modulesURL": {
      "type": "string"
    },
    "configurationFunction": {
      "type": "object"
    }
  },
  "variables": {
    "firstExtensionSuffix": "/JoinDomain",
    "firstExtensionName": "[concat(parameters('vmName'),variables('firstExtensionSuffix'))]"
  },
  "resources": [
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vmName')]",
      "location": "[parameters('SharedVmConfig').location]",
      "dependsOn": [],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('SharedVmConfig').vmSize]"
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('SharedVmConfig').adminUsername]",
          "adminPassword": "[parameters('SharedVmConfig').adminPassword]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[if(equals(parameters('SharedVmConfig').clientOS,'2019-Datacenter'),'MicrosoftWindowsServer','MicrosoftWindowsDesktop')]",
            "offer": "[if(equals(parameters('SharedVmConfig').clientOS,'2019-Datacenter'),'WindowsServer','Windows-11)]",
            "sku": "[parameters('SharedVmConfig').clientOS]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "createOption": "Empty",
              "diskSizeGB": 1023,
              "lun": 0,
              "managedDisk": {
                "storageAccountType": "Standard_LRS"
              }
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('nicName'))]"
            }
          ]
        }
      }
    },
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[variables('firstExtensionName')]",
      "location": "[parameters('SharedVmConfig').location]",
      "tags": {
        "displayName": "Join Domain"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('SharedVmConfig').domainName]",
          "OUPath": "OU=Clients,OU=HowiLab,dc=corp,dc=howilab,dc=internal",
          "Options": "3",
          "Restart": "true",
          "User": "[parameters('SharedVmConfig').domainUserName]"
        },
        "protectedsettings": {
          "Password": "[parameters('SharedVmConfig').adminPassword]"
        }
      },
      "dependsOn": [
        "[parameters('vmName')]"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/ClientConfig')]",
      "apiVersion": "2017-03-30",
      "location": "[parameters('SharedVmConfig').location]",
      "dependsOn": [
        "[parameters('vmName')]",
        "[concat('Microsoft.Compute/virtualMachines/',parameters('vmName'),'/extensions/JoinDomain')]"
      ],
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.9",
        "autoUpgradeMinorVersion": true,
        "protectedSettings": {
          "Items": {}
        },
        "settings": {
          "modulesUrl": "[concat(parameters('modulesURL'),'/ClientConfig.ps1.zip')]",
          "wmfVersion": "latest",
          "configurationFunction": "[parameters('configurationFunction').ClientConfig]",
          "Properties": {
            "DomainName": "[parameters('SharedVmConfig').domainName]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/BGInfo')]",
      "apiVersion": "2017-03-30",
      "scale": null,
      "location": "[parameters('SharedVmConfig').location]",
      "dependsOn": [
        "[parameters('vmName')]",
        "[concat('Microsoft.Compute/virtualMachines/',parameters('vmName'),'/extensions/JoinDomain')]"
      ],
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "BGInfo",
        "typeHandlerVersion": "2.1",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "properties": []
        }
      }
    }
  ],
  "outputs": {}
}
